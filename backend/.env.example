# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/vibesdlc

# JWT Secret Key (REQUIRED - Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
SECRET_KEY=your-secret-key-here-replace-with-generated-key

# JWT Algorithm
ALGORITHM=HS256

# Token Expiration Settings
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# CSRF Protection (Optional - will use SECRET_KEY if not set)
# CSRF_SECRET_KEY=your-csrf-secret-key-here
CSRF_TOKEN_EXPIRE_MINUTES=60

# Cookie Settings
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax  # Options: strict, lax, none
# COOKIE_DOMAIN=yourdomain.com  # Set in production
